require "spec"
require "../src/*"

describe "<%-= to_capitalized(@json["exercise"].to_s) %>" do
    <%- @json["cases"].as_a.each do |describe| %>
        describe "<%= describe["description"].to_s %>" do
            <%- describe["cases"].as_a.each do |cases| %>
                <%= status()%> "<%-= cases["description"] %>" do
                    <%= to_capitalized(@json["exercise"].to_s) %>.translate(<%= cases["input"]["phrase"].inspect %>).should eq(<%= cases["expected"].to_s.inspect %>)
                end
            <% end %>
        end
    <% end %>
end
